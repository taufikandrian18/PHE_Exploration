            firstItem["C2Total"] = numberFormatter.format(parseFloat(test).toFixed(2));
            $('#gridCont').data("kendoGrid").refresh();
        }
        if (e.field == "C2Gas") {
            var grid = $('#gridCont').data('kendoGrid');
            var selectedRows = grid.select();
            var firstItem = $('#gridCont').data().kendoGrid.dataSource.data()[selectedRows.length - 1];
            var test = parseFloat(firstItem["C2Oil"]) + (parseFloat(firstItem["C2Gas"]) * 0.1726)
            firstItem["C2Total"] = numberFormatter.format(parseFloat(test).toFixed(2));
            $('#gridCont').data("kendoGrid").refresh();
        }
        if (e.field == "C3Oil") {
            var grid = $('#gridCont').data('kendoGrid');
            var selectedRows = grid.select();
            var firstItem = $('#gridCont').data().kendoGrid.dataSource.data()[selectedRows.length - 1];
            var test = parseFloat(firstItem["C3Oil"]) + (parseFloat(firstItem["C3Gas"]) * 0.1726)
            firstItem["C3Total"] = numberFormatter.format(parseFloat(test).toFixed(2));
            $('#gridCont').data("kendoGrid").refresh();
        }
        if (e.field == "C3Gas") {
            var grid = $('#gridCont').data('kendoGrid');
            var selectedRows = grid.select();
            var firstItem = $('#gridCont').data().kendoGrid.dataSource.data()[selectedRows.length - 1];
            var test = parseFloat(firstItem["C3Oil"]) + (parseFloat(firstItem["C3Gas"]) * 0.1726)
            firstItem["C3Total"] = numberFormatter.format(parseFloat(test).toFixed(2));
            $('#gridCont').data("kendoGrid").refresh();
        }
    }
</script>