            .Type(GridSelectionType.Cell))
            .Navigatable()
            .AllowCopy(true)
            .Sortable()
            .Scrollable(x => x.Height(70))
            .DataSource(dataSource => dataSource
                .Ajax()
                .Batch(true)
                .ServerOperation(false)
                .Events(events => events.Error("error_handler").Change("onChange"))
                .Model(model =>
